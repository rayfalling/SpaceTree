<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:theme="clr-namespace:ControlLib.Components.Theme">
    <ResourceDictionary.MergedDictionaries>
        <theme:ResourceDictionaryExtend>
            <theme:ResourceDictionaryExtend.ThemeDictionaries>
                <theme:ThemeDictionary ThemeName="Light">
                    <theme:ThemeDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/ControlLib;component/Styles/Colors/Colors.Light.xaml" />
                        <ResourceDictionary Source="/ControlLib;component/Styles/Brush/Brushes.xaml" />
                    </theme:ThemeDictionary.MergedDictionaries>
                </theme:ThemeDictionary>
                <theme:ThemeDictionary ThemeName="Dark">
                    <theme:ThemeDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/ControlLib;component/Styles/Colors/Colors.Dark.xaml" />
                        <ResourceDictionary Source="/ControlLib;component/Styles/Brush/Brushes.xaml" />
                    </theme:ThemeDictionary.MergedDictionaries>
                </theme:ThemeDictionary>
            </theme:ResourceDictionaryExtend.ThemeDictionaries>
        </theme:ResourceDictionaryExtend>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>